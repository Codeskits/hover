.icon
    display: inline-block
    vertical-align: top
    width: $font-default
    height: $font-default
    line-height: $font-default

    &.is-large
        width: $font-large
        height: $font-large
        line-height: $font-large

    &.is-small
        width: $font-small
        height: $font-small
        line-height: $font-small

    &.is-massive
        width: ($font-large * 2)
        height: ($font-large * 2)
        line-height: ($font-large * 2)

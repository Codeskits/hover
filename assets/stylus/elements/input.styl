.input
    position: relative
    display: flex
    height: 42px

    >input
        display: block
        padding: $padding
        border-radius: $border-radius
        font-size: $font-default
        line-height: 1em
        border-width: 1px
        border-style: solid
        border-color: $gray
        text-align: $start-direction
        -webkit-appearance: none
        color: $dark
        margin: 0
        width: 100%
        &:focus
            outline: 0
            border-color: $blue
            + .input-icon
                _icon-color($blue)

    &-icon
        position: absolute
        top: 0
        {$end-direction}: $padding
        height: 100%
        _icon-color($gray)
        >svg
            height: 100%
        >span
        >i
            line-height: 100%

    &-button
        border-top-{$start-direction}-radius: 0
        border-bottom-{$start-direction}-radius: 0
        border-{$start-direction}: 0

    &-label
        padding: $padding
        border: 1px solid $gray
        border-top-{$start-direction}-radius: $border-radius
        border-bottom-{$start-direction}-radius: $border-radius
        border-{$end-direction}: $border-radius
        background-color: $white
        _icon-color($dark)

    &.is-rounded
        >input
            border-radius: 50px
            padding-{$start-direction} ($padding + 10px)

        >.input-button
            border-top-{$end-direction}-radius: 42px
            border-bottom-{$end-direction}-radius: 42px

        >.input-label
            border-top-{$start-direction}-radius: 42px
            border-bottom-{$start-direction}-radius: 42px

    &.is-button
        >input
            border-top-{$end-direction}-radius: 0
            border-bottom-{$end-direction}-radius: 0

    &.is-labeled
        >input
            border-top-{$start-direction}-radius: 0
            border-bottom-{$start-direction}-radius: 0
            padding: $padding

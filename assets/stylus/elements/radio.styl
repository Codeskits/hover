.radio
    margin: ($margin / 2) 0
    &-input
        display: none
        &:checked
            + .radio-label .radio-circle:before
                background-color: $blue
    &-label
        display: inline-flex
        line-height: 17px
        font-size: 15px
        color: $dark
        &:hover
            color: $blue

    &-circle
        display: inline
        width: 15px
        height: 15px
        border-radius: 15px
        border: 1px solid $blue
        padding: 0
        margin-{$end-direction}: $margin
        cursor: pointer

        &:before
            content: ''
            display: block
            width: 9px
            height: 9px
            border-radius: 9px
            margin: 2px
            transition: 0.5s

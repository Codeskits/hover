.slider
    position: relative
    display: flex

    input
        display: none
        -webkit-appearance: none
        border: 1px solid $gray
        border-radius: $border-radius
        background-color: $gray
        padding: 5px 10px
        width: 60px
        margin-{$start-direction}: 20px
        text-align: center
        color: $dark

        &:focus
            outline: none

    input[type=number]::-webkit-inner-spin-button
    input[type=number]::-webkit-outer-spin-button
        appearance: none
        margin: 0;

    &.is-editable
        input
            display: block

    &-body
        position: relative
        flex: 1
        margin: 10px
        width: auto
        height: 5px
        background-color: $blue
        &:hover
        &.is-draging
            .slider-label
                opacity: 1

    &-handle
        position: absolute
        width: 15px
        height: 15px
        margin-left: (@width / -2)
        margin-top: -5px
        border-radius: 70px
        background-color: $blue
        box-shadow: 0 2px 4px alpha($dark, 20%)

    &-label
        position: absolute
        top: -30px
        text-align: center
        background-color: $blue
        color: $white
        border-radius: 4px
        padding: 4px
        opacity: 0
        box-sizing: border-box
        font-size: 12px
        z-index: 999

    &-fill
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        background-color: $gray
        height: 5px

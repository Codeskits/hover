/**
 * Device Breakpoint
 */
$mobile     = 0
$tablet     = 768px
$screen     = 991px
$widescreen = 1200px
$ultrawide  = 1920px

/**
 * elements
 */
 $border-radius = 6px

/**
 * base
 */
$margin       = 10px
$padding      = 10px
$font-small   = 12px
$font-default = 16px
$font-large   = 23px

/**
 * grid
 */
$columns          = 12
$direction        = ltr
$start-direction  = setDirection('start')
$end-direction    = setDirection('end')

$container-mobile     = 100%
$container-tablet     = $tablet     - ($columns * (2 * 1.0)) - 17
$container-screen     = $screen     - ($columns * (2 * 1.5)) - 17
$container-widescreen = $widescreen - ($columns * (2 * 2.0)) - 17
$container-ultrawide  = $ultrawide  - ($columns * (2 * 2.5)) - 17
